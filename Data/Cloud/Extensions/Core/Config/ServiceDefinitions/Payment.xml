<?xml version="1.0" encoding="utf-8"?>
<PropertyBag xmlns:arrays="http://schemas.microsoft.com/2003/10/Serialization/Arrays" xmlns:i="http://www.w3.org/2001/XMLSchema-instance" i:type="ServiceDefinitionEntity" xmlns="MetraTech">
  <DefaultValue i:nil="true" />
  <Description>Account payments.</Description>
  <Direction>Input</Direction>
  <IsCore>false</IsCore>
  <Name>Payment</Name>
  <Required>true</Required>
  <Type i:type="PropertyBagType">
    <BaseType>PropertyBag</BaseType>
    <ListType>None</ListType>
    <Name>ServiceDefinition</Name>
    <PropertyBagMode>ExtensibleEntity</PropertyBagMode>
  </Type>
  <Properties>
    <Properties>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>The internal MetraNet account identifier</Description>
        <Direction>Input</Direction>
        <IsCore>true</IsCore>
        <Name>AccountId</Name>
        <Required>true</Required>
        <Type i:type="NumberType">
          <BaseType>Integer32</BaseType>
          <ListType>None</ListType>
          <UnitOfMeasureMode>None</UnitOfMeasureMode>
          <UnitOfMeasureQualifier i:nil="true" />
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>The time the event is deemed to have occurred</Description>
        <Direction>Input</Direction>
        <IsCore>true</IsCore>
        <Name>Timestamp</Name>
        <Required>true</Required>
        <Type>
          <BaseType>DateTime</BaseType>
          <ListType>None</ListType>
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Payer identifier used for account resolution in conjunction with Namespace. Either Payer/Namespace or the _AccountID must be metered.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>Payer</Name>
        <Required>false</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>None</ListType>
          <Length>80</Length>
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Namespace used to resolve the Payer account above.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>Namespace</Name>
        <Required>false</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>None</ListType>
          <Length>40</Length>
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Used to set the account ID for this payment. Either this or the Payer/Namespace must be metered.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>_AccountID</Name>
        <Required>false</Required>
        <Type i:type="NumberType">
          <BaseType>Integer32</BaseType>
          <ListType>None</ListType>
          <UnitOfMeasureMode>None</UnitOfMeasureMode>
          <UnitOfMeasureQualifier i:nil="true" />
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Amount of the payment. Payments should be metered as negative numbers.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>_Amount</Name>
        <Required>false</Required>
        <Type i:type="NumberType">
          <BaseType>Decimal</BaseType>
          <ListType>None</ListType>
          <UnitOfMeasureMode>None</UnitOfMeasureMode>
          <UnitOfMeasureQualifier i:nil="true" />
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Memo to indicate the nature of the payment, shown on invoice.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>Description</Name>
        <Required>false</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>None</ListType>
          <Length>80</Length>
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Date on which the payment was made.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>EventDate</Name>
        <Required>false</Required>
        <Type>
          <BaseType>DateTime</BaseType>
          <ListType>None</ListType>
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Indicates the source system. MetraTech (MT), A/R (AR), or external (EX): for synchronization with other systems. If 'AR', payment will not be exported to A/R system.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>Source</Name>
        <Required>false</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>None</ListType>
          <Length>2</Length>
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Reason code.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>ReasonCode</Name>
        <Required>false</Required>
        <Type i:type="EnumerationType">
          <BaseType>Enumeration</BaseType>
          <ListType>None</ListType>
          <Category>ReasonCode</Category>
          <Namespace>metratech.com/balanceadjustments</Namespace>
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Indicates how payment was made. (Credit Card, ACH, Check, Cash).</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>PaymentMethod</Name>
        <Required>true</Required>
        <Type i:type="EnumerationType">
          <BaseType>Enumeration</BaseType>
          <ListType>None</ListType>
          <Category>PaymentMethod</Category>
          <Namespace>metratech.com/balanceadjustments</Namespace>
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Type of credit card used.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>CCType</Name>
        <Required>false</Required>
        <Type i:type="EnumerationType">
          <BaseType>Enumeration</BaseType>
          <ListType>None</ListType>
          <Category>CreditCardType</Category>
          <Namespace>metratech.com</Namespace>
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Check number or last 4 digits of credit card number.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>CheckOrCardNumber</Name>
        <Required>false</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>None</ListType>
          <Length>20</Length>
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Unique identifier for the payment, usually from external system. To be used for cross-reference purposes. Can also be used to tie a payment with an external authorization number.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>ReferenceID</Name>
        <Required>false</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>None</ListType>
          <Length>50</Length>
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>ID of interval for which the payment was made. For tracking purposes, especially for automatic credit card payments..</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>TargetInterval</Name>
        <Required>false</Required>
        <Type i:type="NumberType">
          <BaseType>Integer32</BaseType>
          <ListType>None</ListType>
          <UnitOfMeasureMode>None</UnitOfMeasureMode>
          <UnitOfMeasureQualifier i:nil="true" />
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Session timestamp, used to guide to an explicit interval.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>SessionTime</Name>
        <Required>false</Required>
        <Type>
          <BaseType>DateTime</BaseType>
          <ListType>None</ListType>
        </Type>
      </Property>
      <Property i:type="ServiceDefinitionProperty">
        <DefaultValue i:nil="true" />
        <Description>Payment Transaction ID refers to payment history information.</Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>PaymentTxnID</Name>
        <Required>false</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>None</ListType>
          <Length>120</Length>
        </Type>
      </Property>
    </Properties>
  </Properties>
  <AutoDelete>false</AutoDelete>
  <AutoResubmit>false</AutoResubmit>
</PropertyBag>