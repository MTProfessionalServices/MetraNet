<?xml version="1.0" encoding="utf-8"?>
<PropertyBag xmlns:arrays="http://schemas.microsoft.com/2003/10/Serialization/Arrays" xmlns:i="http://www.w3.org/2001/XMLSchema-instance" xmlns="MetraTech">
  <DefaultValue i:nil="true" />
  <Description>
            Represents a charge calculated by the Metanga Rating Engine
            </Description>
  <Direction>Input</Direction>
  <IsCore>true</IsCore>
  <Name>Charge</Name>
  <Required>false</Required>
  <Type i:type="PropertyBagType">
    <BaseType>PropertyBag</BaseType>
    <ListType>None</ListType>
    <Name>Charge</Name>
    <PropertyBagMode>PropertyBag</PropertyBagMode>
  </Type>
  <Properties>
    <Properties>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
             Billable Event, associated with the current charge
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>BillableEvent</Name>
        <Required>true</Required>
        <Type i:type="PropertyBagType">
          <BaseType>PropertyBag</BaseType>
          <ListType>None</ListType>
          <Name>BillableEvent</Name>
          <PropertyBagMode>ExtensibleEntity</PropertyBagMode>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            The start date and time used to accrue this charge
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>StartTime</Name>
        <Required>true</Required>
        <Type>
          <BaseType>DateTime</BaseType>
          <ListType>None</ListType>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            The end date and time used to accrue this charge
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>EndTime</Name>
        <Required>true</Required>
        <Type>
          <BaseType>DateTime</BaseType>
          <ListType>None</ListType>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
             Name of Unit which was used for billing. Also contains the type of recurrent unit. For example Minutes/Month.
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>UnitName</Name>
        <Required>true</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>KeyList</ListType>
          <Length>255</Length>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            The quantity of items included in this charge
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>Quantity</Name>
        <Required>true</Required>
        <Type i:type="NumberType">
          <BaseType>Decimal</BaseType>
          <ListType>None</ListType>
          <UnitOfMeasureMode>None</UnitOfMeasureMode>
          <UnitOfMeasureQualifier i:nil="true" />
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            The product used to resolve prices associated with this charge
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>Product</Name>
        <Required>true</Required>
        <Type i:type="PropertyBagType">
          <BaseType>PropertyBag</BaseType>
          <ListType>None</ListType>
          <Name>Product</Name>
          <PropertyBagMode>ExtensibleEntity</PropertyBagMode>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            The subscription used to resolve prices associated with this charge
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>SubscriptionPackageProductId</Name>
        <Required>false</Required>
        <Type>
          <BaseType>UniqueIdentifier</BaseType>
          <ListType>None</ListType>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            The price that is being applied for each item
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>Price</Name>
        <Required>true</Required>
        <Type i:type="NumberType">
          <BaseType>Decimal</BaseType>
          <ListType>None</ListType>
          <UnitOfMeasureMode>None</UnitOfMeasureMode>
          <UnitOfMeasureQualifier i:nil="true" />
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            The currency in which the price is expressed
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>PriceCurrency</Name>
        <Required>true</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>None</ListType>
          <Length>255</Length>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            Total amount calculated in the price currency
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>PriceAmount</Name>
        <Required>true</Required>
        <Type i:type="NumberType">
          <BaseType>Decimal</BaseType>
          <ListType>None</ListType>
          <UnitOfMeasureMode>None</UnitOfMeasureMode>
          <UnitOfMeasureQualifier i:nil="true" />
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            The currency in which the charges will be invoiced
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>ChargeCurrency</Name>
        <Required>true</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>None</ListType>
          <Length>255</Length>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            The total amount for these charges expressed in the charge currency
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>ChargeAmount</Name>
        <Required>true</Required>
        <Type i:type="NumberType">
          <BaseType>Decimal</BaseType>
          <ListType>None</ListType>
          <UnitOfMeasureMode>None</UnitOfMeasureMode>
          <UnitOfMeasureQualifier i:nil="true" />
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            Invoice identity.
            TODO: Should this property be removed from the charge?? Because it's part
            of the invoice aggregate and the InvoiceId belongs to the aggregate entity
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>InvoiceId</Name>
        <Required>false</Required>
        <Type>
          <BaseType>UniqueIdentifier</BaseType>
          <ListType>None</ListType>
        </Type>
      </Property>
    </Properties>
  </Properties>
</PropertyBag>