        <IsCore>true</IsCore>
        <Name>Description</Name>
        <Required>true</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>KeyList</ListType>
          <Length>255</Length>
        </Type>
      </Property>
    </Properties>
  </Properties>
</PropertyBag>