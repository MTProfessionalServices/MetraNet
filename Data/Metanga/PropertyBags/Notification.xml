<?xml version="1.0" encoding="utf-8"?>
<PropertyBag xmlns:arrays="http://schemas.microsoft.com/2003/10/Serialization/Arrays" xmlns:i="http://www.w3.org/2001/XMLSchema-instance" xmlns="MetraTech">
  <DefaultValue i:nil="true" />
  <Description>
            The entity responsible for configure notification for an event in Metanga.
            </Description>
  <Direction>Input</Direction>
  <IsCore>true</IsCore>
  <Name>Notification</Name>
  <Required>true</Required>
  <Type i:type="PropertyBagType">
    <BaseType>PropertyBag</BaseType>
    <ListType>None</ListType>
    <Name>Notification</Name>
    <PropertyBagMode>Entity</PropertyBagMode>
  </Type>
  <Properties>
    <Properties>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            Represents a state of the Notification. Notification endpoint and notification itself can be Enabled or Disabled independently. 
            And notification message will be sent only if both of them the Notification and the Endpoint are Active. 
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>Active</Name>
        <Required>true</Required>
        <Type>
          <BaseType>Boolean</BaseType>
          <ListType>None</ListType>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            The class name of the entity which will be observe.
            You can use following entities for notifications: Account, Product, Package, Promotion, Invoice, Subscription, NotificationEndpoint and Notification.
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>TriggerEntityType</Name>
        <Required>true</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>None</ListType>
          <Length>255</Length>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            Represents name of the method in observable entity which will generate notification.
            Only the following types are supported by Metanga: Create, Update and Delete.
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>EventType</Name>
        <Required>true</Required>
        <Type i:type="EnumerationType">
          <BaseType>Enumeration</BaseType>
          <ListType>None</ListType>
          <Category>EventType</Category>
          <Namespace>metanga</Namespace>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            You should configure a notification endpoint to able to send notification messages.
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>NotificationEndpoint</Name>
        <Required>true</Required>
        <Type i:type="PropertyBagType">
          <BaseType>PropertyBag</BaseType>
          <ListType>None</ListType>
          <Name>NotificationEndpoint</Name>
          <PropertyBagMode>Entity</PropertyBagMode>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            Represents a name of the triggered event that will be displayed in external system. For example: If new account has been created in Metanga, you can set event name "New Subscriber" for the message.
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>EventName</Name>
        <Required>true</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>None</ListType>
          <Length>255</Length>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description i:nil="true" />
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>EntityId</Name>
        <Required>false</Required>
        <Type>
          <BaseType>Guid</BaseType>
          <ListType>None</ListType>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description i:nil="true" />
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>ExternalId</Name>
        <Required>true</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>None</ListType>
          <Length>255</Length>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description i:nil="true" />
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>Name</Name>
        <Required>true</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>KeyList</ListType>
          <Length>255</Length>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description i:nil="true" />
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>Description</Name>
        <Required>true</Required>
        <Type i:type="StringType">
          <BaseType>String</BaseType>
          <ListType>KeyList</ListType>
          <Length>255</Length>
        </Type>
      </Property>
    </Properties>
  </Properties>
</PropertyBag>