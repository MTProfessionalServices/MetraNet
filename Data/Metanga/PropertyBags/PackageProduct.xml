<?xml version="1.0" encoding="utf-8"?>
<PropertyBag xmlns:arrays="http://schemas.microsoft.com/2003/10/Serialization/Arrays" xmlns:i="http://www.w3.org/2001/XMLSchema-instance" xmlns="MetraTech">
  <DefaultValue i:nil="true" />
  <Description>
            Package Product Class - Links between package and products in it
            </Description>
  <Direction>Input</Direction>
  <IsCore>true</IsCore>
  <Name>PackageProduct</Name>
  <Required>true</Required>
  <Type i:type="PropertyBagType">
    <BaseType>PropertyBag</BaseType>
    <ListType>None</ListType>
    <Name>PackageProduct</Name>
    <PropertyBagMode>PropertyBag</PropertyBagMode>
  </Type>
  <Properties>
    <Properties>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            A product that is part of this package
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>Product</Name>
        <Required>true</Required>
        <Type i:type="PropertyBagType">
          <BaseType>PropertyBag</BaseType>
          <ListType>None</ListType>
          <Name>Product</Name>
          <PropertyBagMode>ExtensibleEntity</PropertyBagMode>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            The event model is used to indicate whether any billable events for this product should be generated
            by Metanga for any customers that are subscribed for this product.
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>EventModel</Name>
        <Required>true</Required>
        <Type i:type="EnumerationType">
          <BaseType>Enumeration</BaseType>
          <ListType>None</ListType>
          <Category>EventModel</Category>
          <Namespace>metanga</Namespace>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            Defines whether product inside the package required in proccess of subscription or Optional
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>Optional</Name>
        <Required>true</Required>
        <Type>
          <BaseType>Boolean</BaseType>
          <ListType>None</ListType>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            Prices for a product can be overriden for a given package by providing a new price schedule.
            For example, a product that is normally sold for $5 could be sold for $4 for a given package.
            A null value indicates that the price set at the product should be used.
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>PriceSchedule</Name>
        <Required>true</Required>
        <Type i:type="PropertyBagType">
          <BaseType>PropertyBag</BaseType>
          <ListType>None</ListType>
          <Name>PriceSchedule</Name>
          <PropertyBagMode>PropertyBag</PropertyBagMode>
        </Type>
      </Property>
      <Property>
        <DefaultValue i:nil="true" />
        <Description>
            If product is smart then defines the rules for smart product
            </Description>
        <Direction>Input</Direction>
        <IsCore>false</IsCore>
        <Name>ProductModel</Name>
        <Required>true</Required>
        <Type i:type="PropertyBagType">
          <BaseType>PropertyBag</BaseType>
          <ListType>None</ListType>
          <Name>ProductModel</Name>
          <PropertyBagMode>PropertyBag</PropertyBagMode>
        </Type>
      </Property>
    </Properties>
  </Properties>
</PropertyBag>