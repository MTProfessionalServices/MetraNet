        <IsCore>true</IsCore>
        <Name>Optional</Name>
        <Required>true</Required>
        <Type>
          <BaseType>Boolean</BaseType>
          <ListType>None</ListType>
        </Type>
      </Property>
      <Property>
        <Availability>Unknown</Availability>
