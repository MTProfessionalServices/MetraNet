<!-- CSR Subscriber Credit Request Notification EMail Template Format 	-->
<!-- ATTENTION : Set the language US,DE,CN always in UPPER CASE		-->

<xmlconfig>
	<template>
  		<name>default</name>
  		<language>US</language>

<!-- *************************************************************************************************************** -->
<!-- English Version                                                                                                 -->
<!-- *************************************************************************************************************** -->

	  	<default_headers>
			<def_bodyformat ptype="INTEGER"></def_bodyformat>

			<!-- Keep the def_to like this it must contains a valid email though it is not used -->   
			<def_to>csr@metratech.com</def_to>

			<!-- Put your CSR email address -->
			<def_from>csr@metratech.com</def_from>
			
			<!-- The subject of the eMail -->
			<def_subject>Credit Request Notification</def_subject>

    			<def_cc></def_cc>
   
   	 		<def_importance ptype="INTEGER"></def_importance>
    			<def_mailformat ptype="INTEGER">0</def_mailformat> 
    			<def_bcc></def_bcc>
	  	</default_headers>

		<!-- The EMail text with the tags %% %% -->
		<message_body>
  		<![CDATA[
<br>
Your credit request for %%AMOUNT%% regarding %%REASON%%<br>
has been %%APPROVED_DENIED%%.<br>
<br>
%%ADDITIONAL_NOTES%%<br>
<br>
Your business is important to us.  If you have any questions regarding this item, please contact our customer service department.
<br>
Thank you
<br>
]]>
		</message_body>


