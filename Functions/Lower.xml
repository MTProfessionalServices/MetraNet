<?xml version="1.0" encoding="utf-8"?>
<TreeLogicFunction>
  <Name>Lower</Name>
  <Category>Text</Category>
  <ReturnType>string</ReturnType>
  <Description>Converts a text string to all lower case letters.</Description>
  <ArgumentListType>Fixed</ArgumentListType>
  <FixedArguments>
    <Argument>
      <Name>Text</Name>
      <DataType>string</DataType>
      <Description>The text that you want converted to lower case.</Description>
    </Argument>
  </FixedArguments>
  <Mtsql>
    <FirstSupported>5.0</FirstSupported>
    <CodeGenTemplate>lower({0})</CodeGenTemplate>
    <CodeGenMode>BasicTemplate</CodeGenMode>
  </Mtsql>
  <CSharp>
    <FirstSupported>6.0.5</FirstSupported>
    <CodeGenTemplate>{0}.ToLower()</CodeGenTemplate>
    <CodeGenMode>BasicTemplate</CodeGenMode>
  </CSharp>
</TreeLogicFunction>
