<!-- Wizard.xml                                                         -->
<!-- Contains information to drive the Priceable Item wizard for MPM    -->

<MTWizard>
  <title>New Rate Schedule Wizard</title>
  <template>wizard.html</template>
  <name>NewRS</name>    <!-- One word, used to store/reference session data -->
  
  <buttons>
    <back><![CDATA[
      <table cellspacing="0" cellpadding="0">
        <tr>
          <td><button [BACK_BUTTON_STATE] onClick="javascript:WizardBack(); return false;" class="clsWizardButton">&lt; Back</button></td>
        </tr>
      </table>
    ]]></back>
    
    <next><![CDATA[
      <table cellspacing="0" cellpadding="0">
        <tr>
          <td><button name='butNext' onClick="javascript:WizardNext(); return false;" class="clsWizardButton">Next &gt;</button></td>
        </tr>
      </table>    
    ]]></next>
    
    <finish><![CDATA[
      <table cellspacing="0" cellpadding="0">
        <tr>
          <td><button  name='butFinish'  onClick="javascript:WizardFinish(); return false;" class="clsWizardButton">Finish</button></td>
        </tr>
      </table>    
    ]]></finish>
    
    <cancel><![CDATA[
      <table cellspacing="0" cellpadding="0">
        <tr>
          <td><button  name='butCancel'  onClick="javascript:WizardCancel(); return false;" class="clsWizardButton">Cancel</button></td>
        </tr>
      </table>    
    ]]></cancel>
  </buttons>
  
  <!-- Template for the left_frame -->
  <left_frame_html><![CDATA[
    <td valign="top" width="200" height="100%">
      <table class="clsWizardTableHeader" cellspacing="1" cellpadding="0" height="100%" width="100%">
        <tr>
          <td valign="top">
            <table class="clsWizardBody" height="100%" width="100%">
              <tr>
                <td valign="top">
                  [LEFT_FRAME_HTML]
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
   ]]></left_frame_html>
   
   <!-- Template for the right frame -->
   <right_frame_html><![CDATA[
      <form name="WizardForm" action="[FORM_ACTION]" method="post">
        <input type="hidden" name="direction" value="forward">
        <table class="clsWizardTableHeader" cellspacing="1" cellpadding="0" width="100%" height="100%">
          <tr>
            <td>
              <table class="clsWizardBody" width="100%" height="100%">
                <tr>
                  <td align="center" class="clsWizardTableHeader" colspan="2">[PAGE_TITLE]</td>
                </tr>
                <tr>
                  <td align="center" colspan="2">[ERROR_MESSAGE]</td>
                </tr>

                <tr height="100%">
                  <td width="100%" valign="middle">
                    [RIGHT_FRAME_HTML]
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </form>
   ]]></right_frame_html>       
  
  <button_frame_html><![CDATA[
        <td colspan="2">
          <table width="100%">
            <tr>
              <td colspan="2"><hr size="2"color="black" width="100%"></td>
            </tr>
            <tr>
              <td align="right">
                <table cellspacing="0" cellpadding="0">
                  <tr>
                    <td>
                      [BACK_BUTTON]
                    </td>
                    <td>
                      [NEXT_BUTTON]
                    </td>
                    <td width="30"></td>
                    <td>
                      [CANCEL_BUTTON]
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>  
  
  ]]></button_frame_html>
  
  <!-- Pages are referenced by ID, when choosing the next page, use the ID of 
       the page -->
			 
	<page id="start">
    <!-- If the condition is not satisfied, then the next_page is called -->      
    <next_page>description</next_page>
    <title>New Rate Schedule: Define Effective Dates</title>
    <left_frame_eval>WriteEffectiveDatesLeftPane()</left_frame_eval>
    <right_frame_eval>WriteEffectiveDates("[WIZARD_NAME]")</right_frame_eval>
		<update_verification_eval>ValidateEffectiveDates("[WIZARD_NAME]")</update_verification_eval>
  </page>
 
	<page id="description">
    <previous_page>start</previous_page>
    <title>New Rate Schedule: Description</title>
    <left_frame_eval>WriteDescriptionLeftPane()</left_frame_eval>
    <right_frame_eval>WriteDescriptionPage("[WIZARD_NAME]")</right_frame_eval>
		<update_verification_eval>ValidateDescription("[WIZARD_NAME]")</update_verification_eval>
  </page>
  


</MTWizard>