@model EntitiesTree

<div id="@Html.Raw(Model.ElementId)" class="entitiesTreeContainer" style="height: @Html.Raw(Model.Height)">
  <div class="entitiesTreeWrapper">
    <div id="@Html.Raw(Model.ElementId)Tree">
      <ul>
      </ul>
    </div>
    <div class="clear"></div>
  </div>
  <div class="entitiesTextareaWrapper">
    <div>
      <textarea id="@Html.Raw(Model.ElementId)Textarea"></textarea>
    </div>
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
</div>

<link href="@Url.Content("~/Content/Fancytree/skin-lion/ui.fancytree.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/EntityTreeControl.css")" rel="stylesheet" type="text/css" />
  
<script src="@Url.Content("~/Scripts/jquery.fancytree.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/entities.fancytree.js")" type="text/javascript"></script>

<script type="text/javascript">

  window.entityTreeConfig = {};
  entityTreeConfig.elementId = "@Html.Raw(Model.ElementId)";
  entityTreeConfig.metadataUrl = "@Html.Raw(Model.MetadataAddress)";
  entityTreeConfig.headers = @Html.Raw(Model.HeadersSerialized);
  entityTreeConfig.entitiesBaseTypes = @Html.Raw(Model.EntityBaseTypesSerialized);

</script>

