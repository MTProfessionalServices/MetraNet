<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="MetraPayConfig" type="MetraTech.MetraPay.CMetraPayConfig, MetraPayService"/>
	</configSections>
	<MetraPayConfig>
		<ServiceCertificate findValue="ActivityServicesCert"
				  storeName="Root" storeLocation="LocalMachine" x509FindType="FindBySubjectName" />
		<ServiceThrottling maxConcurrentCalls="1000" maxConcurrentSessions="1000"
                        maxConcurrentInstances="1000" />
		<MetraPayHost Port="51515" />
		<ServiceInstances>
			<ServiceInstance
			  Name="WorldPay"
			  ProcessorType="MetraTech.MetraPay.PaymentGateway.WorldPayGateway, MetraTech.MetraPay.PaymentGateway.dll"
			  ConfigFile="paymentsvr\Config\Gateway\worldpaytest.xml"
        Timeout="30000"/>
		</ServiceInstances>
	</MetraPayConfig>
</configuration>