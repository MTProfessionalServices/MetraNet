<Tax>
  <!-- This file specifies query tags to use for a particular Vendor  (BillSoft/TaxWare/MetraTax) to use to integrate with Tax Framework -->
  <!-- Every extension for which taxes will be calculated need a file like this -->
  <hooks>
    <!-- Query path is defined in adapter config file. Suggested query path is RMP\config\query\tax\Customizable -->
    <hook type="EOP">
      <!-- specify a query to take populate input table with charges from Product View -->
      <PopulateTaxInputTable>__AUDIOCONF_TO_METRATAX_INPUT__</PopulateTaxInputTable>
      <!-- specify a query to update product view with tax results, aggregate them to t_acc_usage, and rollup the charges -->
      <UpdateMetraNetTables>__OUTPUT_TO_AUDIOCONF__</UpdateMetraNetTables>
    </hook>
    <hook type="SCHEDULED">
      <!-- specify a query to take populate input table with charges from Product View -->
      <PopulateTaxInputTable>__AUDIOCONF_TO_METRATAX_INPUT_SCHEDULED__</PopulateTaxInputTable>
      <!-- specify a query to update product view with tax results, aggregate them to t_acc_usage, and rollup the charges -->
      <UpdateMetraNetTables>__OUTPUT_TO_AUDIOCONF_SCHEDULED__</UpdateMetraNetTables>
    </hook>
  </hooks>
</Tax>
