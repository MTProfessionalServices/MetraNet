<?xml version="1.0" encoding="UTF-8"?>

<xmlconfig>
	<Vendor>BillSoft</Vendor>

	<!-- 
  Specify if t_tax_detail table should be populated. Details will include tax type, tax code, tax jurisdiction in raw form returned by tax vendor
  This should be false for estimates. Details table will get huge very soon.
  -->
	<TaxDetailsNeeded ptype="BOOLEAN">TRUE</TaxDetailsNeeded>

	<!-- 
  TRUE - All tax calculateions will be audited on in the Vendor Audit.
  FALSE - Nothing is written in the vendor audit.
  -->
	<IsAuditingNeeded ptype="BOOLEAN">TRUE</IsAuditingNeeded>

	<!-- The maximum number of tax calculation errors permitted before stopping -->
	<MaximumNumberOfErrors ptype="INTEGER">0</MaximumNumberOfErrors>

  <!-- 
  Location for the query folder, where to locate QueryTags defined both in this xml file under <Queries>
  And in the hook query files under extensions\<extension_to_be_taxed>\config\queries\Tax\<tax_vendor>Queries.xml
  -->
	<HookQueryFolder>Queries\Tax\Customizable</HookQueryFolder>
	<!--<HookQueryFolder>Queries\Tax\Test</HookQueryFolder>-->
	<Queries>
	        <CreateTaxInputTable>__CREATE_BILLSOFT_TAX_INPUT__</CreateTaxInputTable>
	        <CreateTaxInputIndexes>__CREATE_BILLSOFT_TAX_INPUT_INDEXES__</CreateTaxInputIndexes>
	</Queries>
  <!-- There can be multiple hooks defined in the extensions to be taxed
  HookType is used to specify which hooks to pick up from the hook query file under
    extensions\<extension_to_be_taxed>\config\queries\Tax\<tax_vendor>Queries.xml
  -->
        <HookType>EOP</HookType>
</xmlconfig>