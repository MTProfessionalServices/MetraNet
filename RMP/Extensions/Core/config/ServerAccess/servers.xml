<?xml version="1.0"?>
<xmlconfig>
  <!-- These entries specify the MEX endpoints to retreive WSDL for creating WCF clients for ActivityServices-->
  <!-- The LocalMEXEndpoint entry is to be used by components that want to use ActivityServices on the local host-->
  <server>
    <servertype>LocalMEXEndpoint</servertype>
    <servername>localhost</servername>
    <portnumber ptype="INTEGER">8010</portnumber>
  </server>

  <!-- The RemoteMEXEndpoint entry is to be used by components that want to use ActivityServices on remote hosts-->
  <server>
    <servertype>RemoteMEXEndpoint</servertype>
    <servername>localhost</servername>
    <portnumber ptype="INTEGER">8010</portnumber>
  </server>

</xmlconfig>
