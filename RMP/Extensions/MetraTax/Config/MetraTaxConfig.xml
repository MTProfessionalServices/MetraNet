<xmlconfig>
  <MetraTax>
    <!-- 
	ShouldUseCountryName should be true if you are using the standard
	MetraTech country code and you want the country name
	to be part of the tax name stored in t_tax_details and
	t_tax_output.
	If you are using a custom country code or do not want
	the country code to be displayed, this should be false.
    -->
    <ShouldUseCountryName>true</ShouldUseCountryName>

    <!--
	 There are 5 tax jurisdiction built into MetraNet:
	 0 - federal
	 1 - state
	 2 - county
	 3 - local
	 4 - other
	 Use one of the numbers about to specify which jurisdiction
	 MetraTax should use for storing/return the VAT tax 
	 calculation.
     -->
    <JurisdicationToUse>0</JurisdicationToUse>
  </MetraTax>
</xmlconfig>
