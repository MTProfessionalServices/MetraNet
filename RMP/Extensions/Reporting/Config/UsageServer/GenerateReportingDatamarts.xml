			<!-- ReverseAdapterQueryFile>queries\ReverseDatamartAdapterInterval.xml</ReverseAdapterQueryFile -->

			<!-- Oracle -->
			<!-- ReverseAdapterQueryFile>queries\ReverseDatamartAdapterInterval.xml</ReverseAdapterQueryFile -->
		</V1>
