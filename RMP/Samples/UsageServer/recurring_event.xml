<xmlconfig>
  <billing_period uct = "Default">
    <soft_close_events>
      <group>
	<!-- This is just a sample file. If you want this adapter to run, copy -->
	<!-- this entry to the original recurring_event.xml file under config -->
	<!-- UsageServer -->
        <!-- Recurring Credit Card/ACH charges -->
        <adapter_set>
          <adapter>MetraAdapter.MTGenMeterAdapter.1</adapter>
          <adapter_name>Payment Billing Adapter</adapter_name>
          <config_file>UsageServer\Adapters\paymentbillingadapter.xml</config_file>
        </adapter_set>
        
        <!-- This is just a sample file. If you want the reporting adapter to run, copy -->
	<!-- this entry to the original recurring_event.xml file under config -->
	<!-- UsageServer -->
        
        <adapter_set>
	  <adapter>MetraAdapter.MTPopulateRptDataAdapter.1</adapter>
	  <adapter_name>Populate Reporting Data Adapter</adapter_name>
	  <config_file>UsageServer\Adapters\PopulateRptDataAdapter.xml</config_file>
	</adapter_set>
	
	<adapter_set>
	  <adapter>MetraAdapter.MTReportAdapter.1</adapter>
	  <adapter_name>Report Adapter</adapter_name>
	  <config_file>UsageServer\Adapters\ReportAdapter.xml</config_file>
        </adapter_set>
        
      </group>
    </soft_close_events>
  </billing_period>

</xmlconfig>
