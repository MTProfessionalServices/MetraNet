<!-- Wizard.xml                                                         -->
<!-- Contains information to drive the Priceable Item wizard for MPM    -->

<MTWizard>
  <title>[TEXT_NEW] [TEXT_KEYTERM_PRODUCT_OFFERING] [TEXT_WIZARD]</title>
  <template>wizard.html</template>
  <name>NewPO</name>    <!-- One word, used to store/reference session data -->
  
  <buttons>
    <back><![CDATA[
      <table cellspacing="0" cellpadding="0">
        <tr>
          <td><button [BACK_BUTTON_STATE] id='butBack' onClick="javascript:WizardBack();" class="clsWizardButton">&lt; Back</button></td>
        </tr>
      </table>
    ]]></back>
    
    <next><![CDATA[
      <table cellspacing="0" cellpadding="0">
        <tr>
          <td><button name='butNext' onClick="javascript:WizardNext();" class="clsWizardButton">Next &gt;</button></td>
        </tr>
      </table>    
    ]]></next>
    
    <finish><![CDATA[
      <table cellspacing="0" cellpadding="0">
        <tr>
          <td><button  name='butFinish' id='butFinish' onClick="javascript:WizardFinish();" class="clsWizardButton">Finish</button></td>
        </tr>
      </table>    
    ]]></finish>
    
    <cancel><![CDATA[
      <table cellspacing="0" cellpadding="0">
        <tr>
          <td><button  name='butCancel' id'butCancel'  onClick="javascript:WizardCancel();" class="clsWizardButton">Cancel</button></td>
        </tr>
      </table>    
    ]]></cancel>
  </buttons>
  
  <!-- Template for the left_frame -->
  <left_frame_html><![CDATA[
    <td valign="top" width="200" height="100%">
      <table class="clsWizardTableHeader" cellspacing="1" cellpadding="0" height="100%" width="100%">
        <tr>
          <td valign="top">
            <table class="clsWizardBody" height="100%" width="100%">
              <tr>
                <td valign="top">
                  [LEFT_FRAME_HTML]
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
   ]]></left_frame_html>
   
   <!-- Template for the right frame -->
   <right_frame_html><![CDATA[
      <form name="WizardForm" action="[FORM_ACTION]" method="post">
        <input type="hidden" name="direction" value="forward">
        <table class="clsWizardTableHeader" cellspacing="1" cellpadding="0" width="100%" height="100%">
          <tr>
            <td>
              <table class="clsWizardBody" width="100%" height="100%">
                <tr>
                  <td align="center" class="clsWizardTableHeader" colspan="2">[PAGE_TITLE]</td>
                </tr>
                <tr>
                  <td align="center" colspan="2">[ERROR_MESSAGE]</td>
                </tr>

                <tr height="100%">
                  <td width="100%" valign="middle">
                    [RIGHT_FRAME_HTML]
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </form>
   ]]></right_frame_html>    
  
  <button_frame_html><![CDATA[
        <td colspan="2">
          <table width="100%">
            <tr>
              <td colspan="2"><hr size="2"color="black" width="100%"></td>
            </tr>
            <tr>
              <td align="right">
                <table cellspacing="0" cellpadding="0">
                  <tr>
                    <td>
                      [BACK_BUTTON]
                    </td>
                    <td>
                      [NEXT_BUTTON]
                    </td>
                    <td width="30"></td>
                    <td>
                      [CANCEL_BUTTON]
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>  
  
  ]]></button_frame_html>
  
  <!-- Pages are referenced by ID, when choosing the next page, use the ID of 
       the page -->
  <page id="start">
    <next_page>currency</next_page>    <!-- Specifies the next page in the wizard, if omitted, this
                                     will be the last page. -->
    <title>[TEXT_NEW] [TEXT_KEYTERM_PRODUCT_OFFERING]</title>                                     
                    
  <!-- Contains the contents of the left frame of the wizard. If
       omitted, the left frame will not be rendered. -->   
    <left_frame_file>[CREATEPO_START]</left_frame_file>                                 

    <!-- The template contains the HTML template for the wizard.  Page processing will first be performed by
         the wizard, then control can be passed to user-defined ASP               -->      
    <!-- <right_frame_file>GeneralConfiguration.html</right_frame_file>   -->
    <right_frame_eval>WriteGeneralConfiguration("[WIZARD_NAME]")</right_frame_eval>
    <!--right_frame_html></right_frame_html-->
    <update_verification_eval>ValidateGeneralConfiguration("[WIZARD_NAME]")</update_verification_eval>  
  </page>

  <page id="currency">
    <previous_page>start</previous_page>
    <next_page>dates</next_page>    <!-- Specifies the next page in the wizard, if omitted, this
                                     will be the last page. -->
    <title>Currency</title> <!-- TODO: Localize this -->                                    
                    
  <!-- Contains the contents of the left frame of the wizard. If
       omitted, the left frame will not be rendered. -->   
    <left_frame_file>[CREATEPO_CURRENCY]</left_frame_file>    
                                        
    <!-- The template contains the HTML template for the wizard.  Page processing will first be performed by
         the wizard, then control can be passed to user-defined ASP               -->      
    <!-- <right_frame_file>GeneralConfiguration.html</right_frame_file>   -->
    <right_frame_eval>WriteCurrencyConfiguration("[WIZARD_NAME]")</right_frame_eval>
    <update_verification_eval>ValidateCurrencyConfiguration("[WIZARD_NAME]")</update_verification_eval>  
  </page> 
 
  <page id="dates">
    <previous_page>currency</previous_page>
    <next_page>summary</next_page>    <!-- Specifies the next page in the wizard, if omitted, this
                                     will be the last page. -->
    <title>[TEXT_EFFECTIVE_DATES]</title>                                     
                    
  <!-- Contains the contents of the left frame of the wizard. If
       omitted, the left frame will not be rendered. -->   
    <left_frame_file>[CREATEPO_DATES]</left_frame_file>    
                                        
    <!-- The template contains the HTML template for the wizard.  Page processing will first be performed by
         the wizard, then control can be passed to user-defined ASP               -->      
    <!-- <right_frame_file>GeneralConfiguration.html</right_frame_file>   -->
    <right_frame_eval>WriteDateConfiguration("[WIZARD_NAME]")</right_frame_eval>
    <update_verification_eval>ValidateDateConfiguration("[WIZARD_NAME]")</update_verification_eval>  
  </page> 
  
  <page id="includeusage">
    <!-- If the condition is not satisfied, then the next_page is called -->      
    <previous_page>dates</previous_page>
	  <next_page>summary</next_page>
    <title>Include Usage Charges</title>
    
    <left_frame_html><![CDATA[
      <table>
        <tr>
          <td class="clsWizardPrompt"><b>Include Usage Charges</b><br><br>
            Most likely your Product Offering will include usage based Priceable Items created in the MetraTech Platform Manager.<br><br>
			Click 'Add' to add one or more of these Usage Charges to this new product offering.
          </td>
        </tr>
      </table>    
    ]]></left_frame_html>
    <right_frame_eval>WriteIncludedUsage("[WIZARD_NAME]")</right_frame_eval>
	<!--right_frame_html></right_frame_html-->
  </page>

  <page id="includerecurringcharge">
    <!-- If the condition is not satisfied, then the next_page is called -->      
    <previous_page>includeusage</previous_page>
	<next_page>summary</next_page>
    <title>Include Recurring Charges</title>
    
    <left_frame_html><![CDATA[
      <table>
        <tr>
          <td class="clsWizardPrompt"><b>Include Recurring Charges</b><br><br>
            Your Product Offering may include a Recurring Charge such as a 'Monthly Service Fee'.<BR><BR> You can add a new or existing recurring charge to this Product Offering by clicking 'Add'. 
          </td>
        </tr>
      </table>    
    ]]></left_frame_html>
    <right_frame_eval>WriteIncludeRecurringCharges("[WIZARD_NAME]")</right_frame_eval>
	<!--right_frame_html></right_frame_html-->
  </page>
 
   <page id="summary">
    <!-- If the condition is not satisfied, then the next_page is called -->      
    <previous_page>dates</previous_page>
    <title>Summary</title>
    
    <left_frame_file>[CREATEPO_SUMMARY]</left_frame_file>
    
    <right_frame_eval>WriteSummary("[WIZARD_NAME]")</right_frame_eval>
	<!--right_frame_html></right_frame_html-->
  </page>
 
</MTWizard>