<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <!-- The file value will be changed at runtime to use the path to MTLog.txt specified in RMP\config\logging\logging.xml -->
    <file value="${MTRMP}\MTLog.Be.txt" />
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <appendToFile value="true" />
	<rollingStyle value="Size" />
	<!-- Will keep the last 2 backups -->
    <maxSizeRollBackups value="2" />
	<!-- Will rollover when the file size reaches 50MB -->
    <maximumFileSize value="50MB" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %property{process} [%logger] [%-5level] %message%newline" />
    </layout>
  </appender>
  <root>
    <level value="ALL" />
    <appender-ref ref="RollingFileAppender" />
  </root>
  <logger name="NHibernate.Impl.SessionFactoryImpl">
    <level value="INFO"/>   
  </logger>
