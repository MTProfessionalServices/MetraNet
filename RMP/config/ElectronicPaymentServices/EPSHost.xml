<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="EPSConfig" type="MetraTech.Core.Services.EPSConfig, MetraTech.Core.Services.dll"/>
	</configSections>

	<EPSConfig>
		<MetraPayHost HostName="localhost" Port="51515" ServerDNSIdentity="ActivityServicesCert"/>
		<ServiceCertificate findValue="ActivityServicesCert"
				  storeName="Root" storeLocation="LocalMachine" x509FindType="FindBySubjectName" />
		<MetraNetAccount Required="FALSE" />
		<MetraPayLog LogRecord="TRUE" />
		<!--<ArPayImplementation Type="ArPaymentNotificationStub.ArPaymentNotificationImpl, ArPaymentNotificationStub.dll"  />-->
		<ArPayImplementation Type="" RaiseError="FALSE" />
        <!--RecheckDatabaseTime is in seconds, transaction timeout is in milliseconds, because it could be much shorter-->
        <OpenTransactions MaxOpenTransactions="200" RecheckDatabaseInterval="600" DefaultTransactionTimeout="30000" TimeoutStepDown="0.8"/>
	</EPSConfig>
</configuration>
