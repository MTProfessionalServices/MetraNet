<xmlconfig>
 <version ptype="INTEGER">1</version>

<!-- 
     perflog.txt holds entry and exit timestamps for a number of
     instrumented segments of code. The code behind it allows multiple
     threads to write to the file without interfering with each other.
     The instrumentation is designed to be low overhead. It should be
     possible to run a system with instrumentation on without significantly
     slowing it down.

     By default, the perflog is off (log level 0). To enable it, set the
     log level to trace (log level 6).
-->


 <logging_config>
  <logfilename>%temp%\perflog.txt</logfilename>

  <!-- To enable perflog, set this to 6 (trace). To disable, set this to 0 (off)  -->
  <!-- After this is changed, the pipeline and IIS will need to be restarted. -->
  <loglevel ptype="INTEGER">0</loglevel>

  <!-- Configuration of remote logging (syslog compatible) -->
  <logsocketlevel ptype="INTEGER">0</logsocketlevel>
    <!-- port number for remote monitoring of messages.  -->
    <!-- 514 is standard for UDP, 1468 is standard for TCP -->
    <logsocketport ptype="INTEGER">1468</logsocketport>
    <!-- server to log to (ip address or dns name) -->
    <logsocketserver>localhost</logsocketserver> 
    <!-- type of network connection (udp or tcp) -->
    <logsocketconnectiontype>tcp</logsocketconnectiontype>
    <!-- configurable syslog facility code (0-23) -->
    <logsocketfacility ptype="INTEGER">16</logsocketfacility>
    <!-- configurable syslog RFC 3164 tag -->
    <logsockettag>MetraNet</logsockettag>
  
  <!-- days that will trigger a log file rollover. 0= no age rollover -->
  <logrolloverage ptype="INTEGER">0</logrolloverage>

  <!-- filter log file contents. 0= no filtering on loglevel-->
  <!-- if this log level is in a message, the circular buffer flushed to log file. -->
  <!-- OFF = 0, FATAL = 1, ERROR = 2, WARNING = 3, INFO = 4, DEBUG = 5, TRACE = 6  -->
  <logfilterlevel ptype="INTEGER">0</logfilterlevel>

  <!-- filter log file contents. empty string= no filtering on application tag-->
  <!-- if this app tag is in a message, the circular buffer flushed to log file. -->
  <logfiltertag></logfiltertag>

  <!-- number of previous messages to log when a message with the filter criteria is hit -->
  <!-- no previous messages = 0,  default = 25 -->
  <logcircularbuffersize ptype="INTEGER">25</logcircularbuffersize>

 </logging_config>
</xmlconfig>
