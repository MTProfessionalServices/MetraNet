<xmlconfig>
  <Version>1</Version>

  <!-- Connection info for RabbitMQ server is stored in servers.xml-->

  <!-- All requests for Messaging Service come through Request queue -->
  <RequestQueue>
    <Name>MTRequest</Name>
  </RequestQueue>

  <!-- All Responses for Messaging Service come through Request queue -->
  <ResponseQueue>
    <!-- this name is just a prefix. Messaging Service will append host name to this to make a queue unique -->
    <Name>MTResponse</Name>
  </ResponseQueue>

  <TimeoutRequestSeconds>30</TimeoutRequestSeconds>
  <ArchiveRequestsMinutes>30</ArchiveRequestsMinutes>
  <!-- where to create ESNT persistent dictionary -->
  <RequestPersistenceFolder>C:\temp\esnt</RequestPersistenceFolder>

  <SupportedMessageTypes>
     <MessageType>
        <Type>TestMessageType</Type>
        <ForwardToQueue>TestClient</ForwardToQueue>
     </MessageType>
     <MessageType>
        <Type>TopCreditCardRequest</Type>
        <ForwardToQueue>TopCreditCard</ForwardToQueue>
     </MessageType>
     <MessageType>
        <Type>SendEmail</Type>
        <ForwardToQueue>SendEmail</ForwardToQueue>
     </MessageType>
  </SupportedMessageTypes>

  <ThreadPool>
     <MaxRequestPoolThreads>5</MaxRequestPoolThreads>
     <MaxResponsePoolThreads>5</MaxResponsePoolThreads>
  </ThreadPool>


</xmlconfig>