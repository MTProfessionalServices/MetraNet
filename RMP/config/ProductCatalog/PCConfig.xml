<xmlconfig>
	<!-- Value can be NONE, ALL, or PO_ONLY -->
	<PLChainingRule>ALL</PLChainingRule>
	<!-- 
		The timeout value used by all prodcat
		recurring event adapters: RC, NonRC, Discount and AggrRating
		and indicates the number of seconds an adapter would wait
		for the batch of sessions to be metered and 
		commited into the database
	 -->
	<BatchSubmitTimeout ptype="INTEGER">3600</BatchSubmitTimeout>
	<!-- 
	 Internal Use Only:
   setting this to TRUE will help in the debugging of temp tables.
   With this setting set to True, batch operations which honor this setting
   will not create "real" temp tables, but rather persistent real tables.
   -->
   <DebugTempTables ptype="BOOLEAN">FALSE</DebugTempTables>
   <!-- 
		This setting defines maximum size of rate schedule cache. After this
		size is reached, rates start getting expired from cache based on LRU
		eviction policy. If this tag is not found, cache size is unlimited.
	 -->
	<RSCacheMaxSize ptype="INTEGER">500000</RSCacheMaxSize>
	<!-- 
		Business rules are mapped directly into C++ enumeration
		Development needs to be done if new business rule is added
	-->
	<BusinessRules>
		<BusinessRule>
			<Type>All_NoEmptyRequiredProperty</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>All_CheckStringLength</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>Account_NoConflictingProdOff</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>Account_NoDuplicateProdOff</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>EffDate_CheckDateCompatibility</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>EffDate_NoEndBeforeStart</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>PITempl_NoDuplicateName</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>PIType_NoDuplicateName</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>PIType_NoRemoveIfTemplate</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>PriceList_NoDuplicateName</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>ProdOff_CheckConfiguration</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>ProdOff_CheckCurrency</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>ProdOff_CheckDates</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>ProdOff_CheckModification</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>ProdOff_NoDuplicateUsageTemplate</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>ProdOff_NoDuplicateTemplate</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>ProdOff_NoDuplicateInstanceName</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>ProdOff_NoDuplicateName</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>ProdOff_NoModificationIfAvailable</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>Account_CheckBillingCycleChange</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>IgnoreDateCheckOnGroupSubDelete</Type>
			<Enabled ptype="BOOLEAN">FALSE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>IgnoreDateCheckOnSubscriptionDelete</Type>
			<Enabled ptype="BOOLEAN">FALSE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>OnlyAbsoluteRateSchedulesWithGroupSubscription</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>PI_CheckCycleChange</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<BusinessRule>
			<Type>Rates_DeleteOverride</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>
		<!--
		  If below business rule is set to TRUE, then
		  the system will prevent one from entering an adjustment if
		  Amount of the adjusted transaction will become less then 0
		-->
		<BusinessRule>
			<Type>Adjustments_NoGreaterThanCharge</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>		
    <!--
		  if true (the default) then enforce corporate account restrictions.
		  We need to run DatabaseProperites hook after we change this value
		  THIS VALUE(IF REQUIRED) SHOULD BE CHANGE IMMEDIATELY AFTER THE INSTALL
		-->
		<BusinessRule>
			<Type>Hierarchy_RestrictedOperations</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>		
	
		<BusinessRule>
			<Type>Subscription_TruncateTimeValues</Type>
			<Enabled ptype="BOOLEAN">TRUE</Enabled>
		</BusinessRule>

<!-- ALERT ALERT ALERT !!!! Once the following business rules are enabled, they should never ever be disabled again. Doing so may cause undesired consequences --> 

<!-- Following business rule was added for FEAT-142 -->	
		<BusinessRule>
			<Type>ProdOff_AllowAccountPOCurrencyMismatch</Type>
			<Enabled ptype="BOOLEAN">FALSE</Enabled>
		</BusinessRule>	

<!-- Following business rule was added for FEAT-147 -->	
		<BusinessRule>
			<Type>ProdOff_AllowMultiplePISubscriptionRCNRC</Type>
			<Enabled ptype="BOOLEAN">FALSE</Enabled>
		</BusinessRule>	
		
	</BusinessRules>
</xmlconfig>
