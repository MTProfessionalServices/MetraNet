<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!--  The enabled flag indicates whether or not to use the QueryManagement Directory and File structure. -->
  <enabled>true</enabled>
  <!--  Validators enforce the business rules pertinent to the QueryManagement Directory and File structure. -->
  <validators>
    <!--  The Direcotry Structure Validator enforces the following validations. -->
    <directory>
      <!--  The DisAllowedFilesFound directory validator enforces only query (info/sql/dbaccess) files are allowed in the query directory. This element is required. -->
      <DisAllowedFilesFound>
        <enabled>false</enabled> <!-- Valid values are true or false. -->
      </DisAllowedFilesFound>
      <!--  The EmptyDirectory directory validator enforces a query directory may not be empty. This element is required. -->
      <EmptyDirectory>
        <enabled>true</enabled> <!-- Valid values are true or false. -->
      </EmptyDirectory>
      <!--  The No QueryInfoFiles directory validator enforces there must be at least one query info file in the directory. This element is required. -->
      <NoQueryInfoFiles>
        <enabled>true</enabled> <!-- Valid values are true or false. -->
      </NoQueryInfoFiles>
    </directory>
    <!--  The InfoFile metadata validators enforce the QueryManagement business rules related to the meta-data in the query info file. -->
    <infofile>
      <!--  The Implementations info file validator enforces that only query sql files for the specified implmentations exist or a common sql file exists. This element is required. -->
      <Implementations>
        <enabled>false</enabled> <!-- Valid values are true or false. -->
      </Implementations>
      <!--  The Parameters info file validator enforces that the number of parameters specified in the info file are also found in the respective sql file. This element is required. -->
      <Parameters>
        <enabled>true</enabled> <!-- Valid values are true or false. -->
      </Parameters>
    </infofile>
  </validators>
</configuration>