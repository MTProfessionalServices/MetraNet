<?xml version="1.0"?>
<PasswordConfig>
  <LoginAttemptsAllowed>6</LoginAttemptsAllowed>

  <MinutesBeforeAutoResetPassword>30</MinutesBeforeAutoResetPassword>

  <!--
    * Must be at least 7 characters and less than 1024
    * Must contain at least one one lower case letter, one upper case letter, and one digit.  
      Special characters are optional.
  -->
  <EnsureStrongPasswords>false</EnsureStrongPasswords>

<!-- 
   If you change password strength condition then please change resource file  Metraview\App_localResources\changepassword.aspx.resx
  -->
  
  <PasswordStrengthRegex><![CDATA[ ^.*(?=.{7,1024})(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).*$ ]]></PasswordStrengthRegex>
  
  <!-- 
    DaysOfInactivityBeforeAccountLocked is applied for System Account types.  Other account types use AccountState 
    property CanLoginToMetraView defined in rmp\extensions\core\config\account\accountstates.xml.  The account can
    be locked out based on this inactivity check.
  -->
  <DaysOfInactivityBeforeAccountLocked>90</DaysOfInactivityBeforeAccountLocked>
  
  <DaysToStartWarningPasswordWillExpire>14</DaysToStartWarningPasswordWillExpire>
  
  <!-- This will not lock the account out, but will ask them to change their password (when within or past the warning period). -->
  <DaysBeforePasswordExpires>90</DaysBeforePasswordExpires>
  
  <NumberOfLastPasswordsThatAreUnique>4</NumberOfLastPasswordsThatAreUnique>
  
  <!-- 
	This section maps password managers to the members of metratech_com.AuthenticationTypes enum.
  -->
  <AuthenticationTypes>
    <AuthenticationType type="MetraNetInternal" passwordManager="MetraTech.Security.PasswordManager, MetraTech.Security" />
    <AuthenticationType type="ActiveDirectory" passwordManager="MetraTech.Security.LdapPasswordManager, MetraTech.Security" />
  </AuthenticationTypes>
</PasswordConfig>