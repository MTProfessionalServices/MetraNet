<mt_config>
	<CounterTypes>
		<CounterType>
			<Name>SumOfOneProperty</Name>
			<Description>SUM(A)</Description>
			<ValidForDistribution ptype="BOOLEAN">YES</ValidForDistribution>
			<FormulaDef>
			<Formula>SUM(%%A%%)</Formula>
				<Params>
					<Param>
						<Name>A</Name>
						<Kind>ProductViewProperty</Kind>
						<DBType>NUMERIC</DBType>
					</Param>
				</Params>
			</FormulaDef>
		</CounterType>
		<CounterType>
			<Name>SumOfTwoProperties</Name>
			<Description>SUM(A) + SUM(B)</Description>
			<ValidForDistribution ptype="BOOLEAN">YES</ValidForDistribution>
			<FormulaDef>
				<Formula>SUM(%%A%%)+SUM(%%B%%)</Formula>
				<Params>
					<Param>
						<Name>A</Name>
						<Kind>ProductViewProperty</Kind>
						<DBType>NUMERIC</DBType>
					</Param>
					<Param>
						<Name>B</Name>
						<Kind>ProductViewProperty</Kind>
						<DBType>NUMERIC</DBType>
				</Param>
			</Params>
		</FormulaDef>
		</CounterType>
			<CounterType>
			<Name>DifferenceOfTwoProperties</Name>
			<Description>SUM(A) - SUM(B)</Description>
			<ValidForDistribution ptype="BOOLEAN">NO</ValidForDistribution>
			<FormulaDef>
				<Formula>SUM(%%A%%)-SUM(%%B%%)</Formula>
				<Params>
					<Param>
						<Name>A</Name>
						<Kind>ProductViewProperty</Kind>
						<DBType>NUMERIC</DBType>
					</Param>
					<Param>
						<Name>B</Name>
						<Kind>ProductViewProperty</Kind>
						<DBType>NUMERIC</DBType>
				</Param>
			</Params>
		</FormulaDef>
		</CounterType>

