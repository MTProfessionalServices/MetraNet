		<CounterType>
			<Name>AverageOfOneProperty</Name>
			<Description>AVG(A)</Description>
			<ValidForDistribution ptype="BOOLEAN">NO</ValidForDistribution>
			<FormulaDef>
				<Formula>AVG(%%A%%)</Formula>
				<Params>
					<Param>
						<Name>A</Name>
						<Kind>ProductViewProperty</Kind>
						<DBType>NUMERIC</DBType>
					</Param>
				</Params>
			</FormulaDef>
