  <inquiryTemplate>
    <paymentService merchantCode="MYMERCHANT" version="1.4">
      <inquiry> 
        <orderInquiry orderCode="GeneratedGUID"/>
      </inquiry> 
    </paymentService>
  </inquiryTemplate>
  
  <cancellationTemplate>
    <paymentService merchantCode="MYMERCHANT" version="1.4">
      <modify>
        <orderModification orderCode="GeneratedGUID"> 
          <cancel/> 
      </orderModification>
    </modify>
    </paymentService>
  </cancellationTemplate>
  
  <recurringPaymentTemplate>
    <paymentService version="1.4" merchantCode="TECHMAN">
      <submit>
         <order orderCode="NEWGUID">
            <description>Monthly subscription.</description>
            <amount value="VALUE" currencyCode="CURRENCY" exponent="EXPONENT" />
            <orderContent>Invoice</orderContent>
            <payAsOrder orderCode="PREVGUID" merchantCode="ORIGINALMERCHANT">
              <amount value="100" currencyCode="USD" exponent="2" />
            </payAsOrder>
        </order>
      </submit>
    </paymentService>
  </recurringPaymentTemplate>

  <modificationTemplate>
    <paymentService version="1.4" merchantCode="MYMERCHANT"> 
      <modify>
        <orderModification orderCode="PREVGUID"> 
          <TYPE> 
            <amount value="VALUE" currencyCode="CURRENCY" exponent="EXPONENT" debitCreditIndicator="credit"/> 
            <date dayOfMonth="DAY" month="MONTH" year="YEAR"/> 
          </TYPE>
        </orderModification> 
      </modify>
    </paymentService>
  </modificationTemplate>
