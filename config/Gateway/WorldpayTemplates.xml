  <authorizationTemplateWithPaymentDetails>
    <paymentService version="1.4" merchantCode="MYMERCHANT">
      <submit>
        <order orderCode="GeneratedGUID">
          <description>AuthorizationRequest</description>
          <amount value="VALUE" currencyCode="CURRENCY" exponent="EXPONENT"/>
          <orderContent>
            <![CDATA[“invoice” here]]>
          </orderContent>
		  <paymentDetails> 
		    <__CARD_TYPE_CODE__> 
