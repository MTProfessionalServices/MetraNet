<xmlconfig>
	<version ptype="INTEGER">1</version>
	<name>PAYER_INTERVAL</name>
	<Description>MetraView Online Bill Configuration File</Description>

	<!-- Materialized View Interface implementation id -->
	<progid>MetraTech.DataAccess.MaterializedViews.QueryProvider</progid>

	<!-- DEFERRED, TRANSACTIONAL, OFF -->
	<UpdateMode>DEFERRED</UpdateMode>

	<!-- Relative path to the queries file -->
	<QueryPath>Queries\MaterializedViews\MetraView</QueryPath>

	<!-- Query used to create the materialized view -->
	<create_query_tag>__Create_PAYER_INTERVAL__</create_query_tag>

	<full_query_tag>__FULL_PAYER_INTERVAL__</full_query_tag>

	<!-- Query used to create the summary table for materialized view queries-->
	<init_query_tag>__INIT_PAYER_INTERVAL__</init_query_tag>

	<Event>
		<Description>Update materialized view when tPAYEE_SESSION materialized view changes</Description>

		<!-- A set of base tables that the queries depend on -->
		<base_tables>
			<table_name>%%PAYEE_SESSION%%</table_name>
		</base_tables>

		<!-- Set of queries executed for insert operation -->
		<Operation Name ="insert">
			<update_query_tag>__OpInsert_Update_PAYER_INTERVAL__</update_query_tag>
		</Operation>

		<!-- Set of queries to execute for delete operation -->
		<Operation Name ="delete">
				<update_query_tag>__OpDelete_Update_PAYER_INTERVAL__</update_query_tag>
		</Operation>

		<!-- Set of queries to execute for update operation -->
		<Operation Name ="update">
				<update_query_tag>__OpUpdate_Update_PAYER_INTERVAL__</update_query_tag>
		</Operation>

	</Event>

</xmlconfig>