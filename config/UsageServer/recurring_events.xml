<?xml version="1.0" encoding="utf-8"?>
<xmlconfig>
    <version ptype="INTEGER">2</version>
    <ScheduledAdapters>
    </ScheduledAdapters>
    <EndOfPeriodAdapters>
       <Adapter>
            <Name>TaxWareInputAdapter</Name>
            <DisplayName>TaxWare Input Adapter</DisplayName>
            <ClassID>MetraTech.Tax.Adapters.TaxInputAdapter,MetraTech.Tax.Framework</ClassID>
            <ConfigFile>TaxWareAdapter.xml</ConfigFile>
            <Description>MetraTech Tax Adapter preparing the list of records for which tax has to be calculated</Description>
            <RecurrencePattern>
                <UsageCycleType>All</UsageCycleType>
            </RecurrencePattern>
            <Dependencies>
                <DependsOn>Phase1Checkpoint</DependsOn>
            </Dependencies>
        </Adapter>
       <Adapter>
            <Name>TaxWareCalculateAdapter</Name>
            <DisplayName>TaxWare Calculate Adapter</DisplayName>
            <ClassID>MetraTech.Tax.Adapters.TaxCalculateAdapter,MetraTech.Tax.Framework</ClassID>
            <ConfigFile>TaxWareAdapter.xml</ConfigFile>
            <Description>MetraTech Tax Adapter preparing the list of records for which tax has to be calculated</Description>
            <RecurrencePattern>
                <UsageCycleType>All</UsageCycleType>
            </RecurrencePattern>
            <Dependencies>
                <DependsOn>TaxWareInputAdapter</DependsOn>
            </Dependencies>
        </Adapter>
       <Adapter>
            <Name>TaxWareOutputAdapter</Name>
            <DisplayName>TaxWare Output Adapter</DisplayName>
            <ClassID>MetraTech.Tax.Adapters.TaxOutputAdapter,MetraTech.Tax.Framework</ClassID>
            <ConfigFile>TaxWareAdapter.xml</ConfigFile>
            <Description>MetraTech Tax Adapter puts the calculated taxes back from the temp table to the correct location</Description>
            <RecurrencePattern>
                <UsageCycleType>All</UsageCycleType>
            </RecurrencePattern>
            <Dependencies>
                <DependsOn>TaxWareCalculateAdapter</DependsOn>
	        <DependsOnMe>Invoices</DependsOnMe>
            </Dependencies>
        </Adapter>
    </EndOfPeriodAdapters>
</xmlconfig>