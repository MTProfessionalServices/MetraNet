<xmlconfig>
	<!--  Configuration for the Account Hierachy  -->
	<!--  You will need to restart IIS to pick up changes -->
	<Hierarchy>
		<!--
 	       The selective loading section determines which levels of the 
 	       hierarchy will not be fully loaded when an account is selected 
 	       and synced to the hierarchy.
 	   -->
		<SelectiveLoading>
			<!-- Note:  Level 0 is always selective.  This is the level where corporations live. -->
			<!--
			<Levels>
				<SelectiveLevel>1</SelectiveLevel>
			</Levels>
	    -->
			<!-- Folder IDs can be specified, and will load accounts selectively -->
			<!--
 		  <FolderIDs>
 		    <SelectiveFolderID>235180</SelectiveFolderID>
      </FolderIDs>
      -->
			<!-- Set always selective to true if you only want to load selected accounts -->
			<AlwaysSelective>FALSE</AlwaysSelective>
		</SelectiveLoading>
		<!--
      The TreeCapacity section determines how many child accounts can be dipleyed
      under nodes in the hierarchy tree
    -->
		<TreeCapacity>
			<!-- Determines how many account can be displayed directly under hierarchy root -->
			<RootNodeCapacity>15</RootNodeCapacity>
			<!--
        Determines how many account can be displayed on every page under nested nodes
        in the hierarchy tree
      -->
			<NestedNodePageSize>100</NestedNodePageSize>
		</TreeCapacity>
	</Hierarchy>
</xmlconfig>
