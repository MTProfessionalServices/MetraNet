<?xml version="1.0" encoding="utf-8"?>
<xmlconfig>
    <!-- Hooks called before the pipeline starts up -->
    <!--   First hook argument is a string pointing to the configuration directory -->
    <!--   Second hook argument is set to 1 (meaning startup) -->
    <pipeline_startup>
        <hook>MetraHook.PipelineStartStop.1</hook>
        <!-- this hook removes temporary messages from the stage queues -->
        <hook>MetraHook.PipelineClearQueues.1</hook>
        <!-- this hook deletes sessions.bin -->
        <hook>MetraHook.PipelineRemoveSessionBin.1</hook>
    </pipeline_startup>
    <!-- Hooks called after the pipeline shuts down -->
    <!--   First hook argument is a string pointing to the configuration directory -->
    <!--   Second hook argument is set to 2 (meaning shutdown) -->
    <pipeline_shutdown></pipeline_shutdown>
    <!-- Hooks called before a plug-in executes -->
    <!--   First argument is an MTExecutionInfo object -->
    <!--   Second argument is 1 (meaning before) -->
    <before_plugin>
        <!-- hook>VBPlugInDebugger.PlugInDebugger</hook -->
    </before_plugin>
    <!-- hooks called after a plug-in executes -->
    <!--   First argument is an MTExecutionInfo object -->
    <!--   Second argument is 2 (meaning after) -->
    <after_plugin>
        <!--hook>VBPlugInDebugger.PlugInDebugger</hook-->
    </after_plugin>
    <!-- hooks called before a pipeline audit is run -->
    <!--   First argument is the number of hours passed into the auditor -->
    <!--   Second argument is 1 (meaning before audit) -->
    <before_audit></before_audit>
    <!-- hooks called after a pipeline audit is run -->
    <!--   First argument is the number of hours passed into the auditor -->
    <!--   Second argument is 2 (meaning after audit) -->
    <after_audit></after_audit>
</xmlconfig>