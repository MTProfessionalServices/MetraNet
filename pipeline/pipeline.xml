<?xml version="1.0" encoding="UTF-8"?>
<xmlconfig>
 <version ptype="INTEGER">1</version>
 <!-- Master pipeline configuration -->

 <sharedsessions>
   <filename>%temp%\sessions.bin</filename>
   <sharename>PipelineSessionView</sharename>
   <size ptype="INTEGER">40485760</size><!-- 40 meg -->
   <session_proportion ptype="INTEGER">38</session_proportion>
   <property_proportion ptype="INTEGER">330</property_proportion>
   <session_set_proportion ptype="INTEGER">1</session_set_proportion>
   <session_node_proportion ptype="INTEGER">5</session_node_proportion>
   <string_property_proportion ptype="INTEGER">125</string_property_proportion>
   <object_owner_proportion ptype="INTEGER">1</object_owner_proportion>
 </sharedsessions>

 <thresholdmin ptype="INTEGER">10</thresholdmin>
 <thresholdmax ptype="INTEGER">20</thresholdmax>
 <thresholdrejection ptype="INTEGER">35</thresholdrejection>

 <!-- if routing queue size in bytes exceeds this number, don't put anything else on
      the queue -->
 <max_queue_size ptype="INTEGER">10485760</max_queue_size>
 <min_queue_size ptype="INTEGER">5242880</min_queue_size>

<!--
  <profile>
    <filename>%temp%\profile.bin</filename>
    <sharename>PipelineProfileView</sharename>
    <sessions ptype="INTEGER">20000</sessions>
    <messages ptype="INTEGER">20000</messages>
  </profile>
-->


<!-- Comment out to disable DB queueing, and to enable msm queueing -->
 <harness>
   <routingdatabase>NetMeter</routingdatabase>
 </harness>

 <errorqueue>
   <queue>ErrorQueue</queue>
 </errorqueue>

 <auditqueue>
   <queue>AuditQueue</queue>
 </auditqueue>

 <failedauditqueue>
   <queue>FailedAuditQueue</queue>
 </failedauditqueue>

 <resubmitqueue>
   <queue>ResubmitQueue</queue>
 </resubmitqueue>

  <routefrom>
    <queue>RoutingQueue</queue>
  </routefrom>

	<!-- number of hours to wait between checks for suspended transactions -->
	<!-- this value can be a fraction of an hour - for example .25 means 15 minutes -->
  <suspend_restart_period ptype="DOUBLE">6</suspend_restart_period>

  <startauditting ptype="BOOLEAN">TRUE</startauditting>
  <!-- auditting every hour -->
  <auditinterval ptype="DOUBLE">.25</auditinterval> 
  <!-- auditting the recent 2 hours events -->
  <auditbacktime ptype="INTEGER">2</auditbacktime>
  <!-- auditting if the size of message queue journay is larger than 10 Mbytes -->
  <routingjournalsize ptype="INTEGER">10</routingjournalsize>
  <!-- thread running frequency, every 30 seconds -->
  <auditfrequency ptype="INTEGER">3</auditfrequency>

  <startup>
    <sleep ptype="BOOLEAN">FALSE</sleep>
    <!-- value can be:
          - stage to run one process per stage
	  - extension to run one process per extension (not yet supported)
	  - all to run one process for all stages  -->
    <process_setting>all</process_setting>
  </startup>

  <use_private_queues ptype="BOOLEAN">TRUE</use_private_queues>
  
  <!-- ESR-3497 port ESR-3208 from 6.0.2 to 6.1.1 
    * TRUE: Enforce method 1 : Hard/Fast crash to enable SCM auto restart policy to be used.
    * FALSE: Enforce method 2: Graceful shutdown, will not allow SCM to exercise restart policy 
   -->
  <emergency_stop_policy ptype="BOOLEAN">TRUE</emergency_stop_policy>
</xmlconfig>

							